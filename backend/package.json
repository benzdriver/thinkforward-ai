{
  "name": "thinkforward-ai-backend",
  "version": "1.0.0",
  "description": "Backend for ThinkForward AI platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scan-deps": "node scripts/scan-dependencies.js",
    "install-deps": "node scripts/scan-dependencies.js --install",
    "pretest": "npm run install-deps",
    "test": "NODE_ENV=test mocha --require ./tests/setup.js 'tests/**/*.test.js'",
    "test:coverage": "NODE_ENV=test nyc --reporter=lcov --reporter=text npm test",
    "test:watch": "NODE_ENV=test mocha 'tests/**/*.test.js' --watch",
    "test:unit": "NODE_ENV=test mocha --require ./tests/init.js 'tests/unit/**/*.test.js'",
    "test:unit:models": "NODE_ENV=test mocha --require ./tests/setup.js 'tests/unit/models/*.test.js'",
    "test:unit:controllers": "NODE_ENV=test mocha --require ./tests/setup.js 'tests/unit/controllers/*.test.js'",
    "test:unit:middleware": "NODE_ENV=test mocha --require ./tests/setup.js 'tests/unit/middleware/*.test.js'",
    "test:unit:services": "NODE_ENV=test mocha --require ./tests/setup.js 'tests/unit/services/*.test.js'"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.12.2",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^8.9.0",
    "helmet": "^7.1.0",
    "i18next": "^23.5.1",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "langchain": "^0.0.147",
    "mongoose": "^7.5.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.0",
    "openai": "^4.20.0",
    "pdfkit": "^0.16.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "jest": "^29.7.0",
    "mocha": "^10.8.2",
    "mongodb-memory-server": "^10.1.4",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "ThinkForward AI Team",
  "license": "UNLICENSED",
  "private": true
}
